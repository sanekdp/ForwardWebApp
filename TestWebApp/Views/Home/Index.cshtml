    <div id="custom-templates">
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <label>Сотрудник от:</label>
                    </td>
                    <td>
                        <div class="col-sm-5">
                            <input style="width: 500px" class="typeahead" id="fromEmp" type="text" placeholder="Сотрудник от" data-provide="typeahead">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Сотрудник куда:</label>
                    </td>
                    <td>
                        <div class="col-sm-5">
                            <input style="width: 500px" class="typeahead" id="toEmp" type="text" placeholder="Сотрудник куда" data-provide="typeahead">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Дата начала</label>
                    </td>
                    <td>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <div class='input-group date' id='dateFrom'>
                                    <input type='text' class="form-control" placeholder="Дата начала" />
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>

                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Дата окончания</label>
                    </td>
                    <td>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <div class='input-group date' id='dateTo'>
                                    <input type='text' class="form-control"  placeholder="Дата окончания"/>
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Оставлять копия</label>
                    </td>
                    <td>
                        <input type="checkbox" />
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</div>

@section Styles{
    @Styles.Render("~/Content/Forwarding")
}
@section Scripts{
    @Scripts.Render("~/bundles/Forwarding")
}

