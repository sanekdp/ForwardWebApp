@{
    ViewBag.Title = "Home Page";
}

@using (Html.BeginForm("SaveForward", "Home", FormMethod.Post))
{
    @Html.Hidden("hiddenfromEmp")
    @Html.Hidden("hiddentoEmp")
    <div class="jumbotron">
        <div id="custom-templates">
            <table class="table">
                <tbody>
                <tr>
                    <td>
                        <label>Сотрудник от:</label>
                    </td>
                    <td>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <div class='input-group emp'>
                                    <input style="width: 500px" class="typeahead form-control" id="fromEmp" name="EmployeeFrom" type="text" placeholder="Сотрудник от" data-provide="typeahead">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Сотрудник куда:</label>
                    </td>
                    <td>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <div class='input-group emp'>
                                    <input style="width: 500px" class="typeahead form-control" id="toEmp" type="text" placeholder="Сотрудник куда" data-provide="typeahead">
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-remove"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Дата начала</label>
                    </td>
                    <td>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <div class='input-group date' id='dateFrom'>
                                    <input name="dateBegin" type='text' class="form-control" placeholder="Дата начала"/>
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>

                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Дата окончания</label>
                    </td>
                    <td>
                        <div class="col-sm-5">
                            <div class="form-group">
                                <div class='input-group date' id='dateTo'>
                                    <input name="dateEnd" type='text' class="form-control" placeholder="Дата окончания"/>
                                    <span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label>Оставлять копия</label>
                    </td>
                    <td>
                        <input name="LeavCopyMessage" type="checkbox"/>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
        <input type="submit" value="Сохранить" class="btn btn-success"/>
    </div>
}

@section Styles{
    @Styles.Render("~/Content/Forwarding")
}
@section Scripts{
    @Scripts.Render("~/bundles/Forwarding")
}

